<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/option_share"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/share"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_share"
        android:drawablePadding="16dp" />

    <TextView
        android:id="@+id/option_favorite"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/favorite"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_star_outline"
        android:drawablePadding="16dp" />

    <TextView
        android:id="@+id/option_color"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/change_color"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_palette"
        android:drawablePadding="16dp" />

    <TextView
        android:id="@+id/option_category"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/set_category"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_folder"
        android:drawablePadding="16dp" />

    <TextView
        android:id="@+id/option_lock"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/lock_note"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="16dp" />

    <TextView
        android:id="@+id/option_delete"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/delete"
        android:textColor="@color/colorTrash"
        android:textSize="16sp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_delete"
        android:drawablePadding="16dp" />

</LinearLayout>
