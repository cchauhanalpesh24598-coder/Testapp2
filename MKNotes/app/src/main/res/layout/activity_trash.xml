<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/toolbar_bg"
        android:elevation="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="16dp">

        <ImageButton
            android:id="@+id/btn_trash_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:scaleType="centerInside"
            android:contentDescription="@string/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_trash_back"
            android:layout_marginLeft="16dp"
            android:text="@string/title_trash"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_empty_trash"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete_all"
            android:scaleType="centerInside"
            android:contentDescription="@string/btn_empty_trash" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_trash_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/info_bg"
        android:padding="12dp"
        android:text="@string/trash_info"
        android:textColor="@color/text_secondary"
        android:textSize="13sp" />

    <ListView
        android:id="@+id/list_trash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:paddingTop="8dp"
        android:clipToPadding="false" />

    <LinearLayout
        android:id="@+id/empty_trash_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_trash"
            android:alpha="0.3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/trash_empty"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
