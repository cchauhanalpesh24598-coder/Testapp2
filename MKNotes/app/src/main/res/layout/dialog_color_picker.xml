<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_color_picker_dialog"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_color_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_color"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Color preview bar -->
    <View
        android:id="@+id/color_preview"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="12dp"
        android:background="#FFFFFF" />

    <!-- Color Wheel (will be added programmatically as com.mknotes.app.view.ColorWheelView) -->
    <FrameLayout
        android:id="@+id/color_wheel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Brightness Slider (will be added programmatically as com.mknotes.app.view.BrightnessSliderView) -->
    <FrameLayout
        android:id="@+id/brightness_slider_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp" />

    <!-- Preset color grid label -->
    <TextView
        android:id="@+id/tv_presets_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Presets"
        android:textColor="#9E9E9E"
        android:textSize="13sp"
        android:layout_marginBottom="8dp" />

    <!-- Row 1: DEFAULT, CORAL, ORANGE, SAND -->
    <LinearLayout
        android:id="@+id/color_row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Row 2: STORM, FOG, SAGE, MINT -->
    <LinearLayout
        android:id="@+id/color_row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Row 3: DUSK, FLOWER, BLOSSOM, CLAY -->
    <LinearLayout
        android:id="@+id/color_row_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Buttons: Back + Save -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <TextView
            android:id="@+id/btn_color_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/back"
            android:textColor="#B0B0B0"
            android:textSize="15sp"
            android:background="@drawable/bg_dialog_btn_cancel"
            android:layout_marginRight="12dp" />

        <TextView
            android:id="@+id/btn_color_save"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/btn_save"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/bg_dialog_btn_save" />

    </LinearLayout>

</LinearLayout>
