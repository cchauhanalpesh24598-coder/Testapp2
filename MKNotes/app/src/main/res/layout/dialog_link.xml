<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_link_dialog"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_link_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="@string/add_link"
            android:textColor="@color/keepDialogTextWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_link_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:scaleType="centerInside"
            android:contentDescription="@string/clear" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <EditText
        android:id="@+id/et_link_text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_link_dialog_input"
        android:hint="@string/link_text_hint"
        android:inputType="text"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:singleLine="true"
        android:textColor="@color/keepDialogTextWhite"
        android:textColorHint="@color/keepDialogTextHint"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <EditText
        android:id="@+id/et_link_url"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_link_dialog_input"
        android:hint="@string/link_url_hint"
        android:inputType="textUri"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:singleLine="true"
        android:textColor="@color/keepDialogTextWhite"
        android:textColorHint="@color/keepDialogTextHint"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_link_remove"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_btn_cancel"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/remove_link"
            android:textColor="#FFFF4444"
            android:textSize="14sp"
            android:visibility="gone" />

        <View
            android:id="@+id/spacer_remove"
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_link_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_btn_cancel"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/cancel"
            android:textColor="@color/keepDialogTextWhite"
            android:textSize="14sp" />

        <View
            android:layout_width="10dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/btn_link_save"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_btn_save"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/save_link"
            android:textColor="@color/keepDialogTextWhite"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
