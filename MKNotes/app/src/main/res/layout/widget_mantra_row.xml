<?xml version="1.0" encoding="utf-8"?>
<!--
    Single mantra row for the widget ListView.
    Line 1: "1. Mantra Name"
    Line 2: [Play] [Speed] count
    Play and Speed have separate fillInIntent for different actions.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_row_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">

    <!-- Line 1: "1. Mantra Name" -->
    <TextView
        android:id="@+id/widget_row_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Mantra"
        android:textColor="#81C784"
        android:textSize="11sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end" />

    <!-- Line 2: [Play] [Speed] count -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="1dp">

        <!-- Play/Pause toggle -->
        <ImageView
            android:id="@+id/widget_row_play"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_play"
            android:scaleType="centerInside"
            android:background="@drawable/bg_meditation_widget_btn"
            android:layout_marginRight="6dp"
            android:contentDescription="Play Pause" />

        <!-- Speed cycle button -->
        <TextView
            android:id="@+id/widget_row_speed"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="1x"
            android:textColor="#A5D6A7"
            android:textSize="10sp"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@drawable/bg_meditation_widget_btn"
            android:layout_marginRight="8dp" />

        <!-- Count display -->
        <TextView
            android:id="@+id/widget_row_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#E0E0E0"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>
