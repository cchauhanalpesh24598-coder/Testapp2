<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/analysis_bg">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/analysisToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="4dp"
        android:paddingRight="16dp"
        android:background="@drawable/bg_analysis_toolbar">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/back"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/analysis_title"
            android:textColor="@color/analysis_text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="8dp" />

    </LinearLayout>

    <!-- Mode Selector Pills -->
    <LinearLayout
        android:id="@+id/modeSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/analysis_bg">

        <TextView
            android:id="@+id/modeDate"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:text="@string/analysis_mode_date"
            android:textColor="@color/analysis_tab_text_selected"
            android:textSize="13sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/bg_analysis_mode_selected" />

        <TextView
            android:id="@+id/modeMonth"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:text="@string/analysis_mode_month"
            android:textColor="@color/analysis_tab_text"
            android:textSize="13sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/bg_analysis_mode_pill" />

        <TextView
            android:id="@+id/modeYear"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/analysis_mode_year"
            android:textColor="@color/analysis_tab_text"
            android:textSize="13sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/bg_analysis_mode_pill" />

    </LinearLayout>

    <!-- Scrollable content below -->
    <ScrollView
        android:id="@+id/mainScroller"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Calendar View (Custom) -->
            <FrameLayout
                android:id="@+id/calendarContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <!-- Selection Controls: count + Clear All + Done -->
            <LinearLayout
                android:id="@+id/selectionControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/selectionCountLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0 / 7 selected"
                    android:textColor="@color/analysis_text_secondary"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/btnClearAll"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/analysis_clear_all"
                    android:textColor="@color/analysis_text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/bg_analysis_mode_pill"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/btnDone"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/analysis_done"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/bg_analysis_btn_done" />

            </LinearLayout>

            <!-- Selection Chips (horizontal scroll) -->
            <HorizontalScrollView
                android:id="@+id/chipsScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/chipsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical" />

            </HorizontalScrollView>

            <!-- Tab Bar -->
            <LinearLayout
                android:id="@+id/tabBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tabNotes"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="@string/analysis_tab_notes"
                    android:textColor="@color/analysis_tab_text_selected"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/bg_analysis_tab_selected" />

                <TextView
                    android:id="@+id/tabRoutine"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="@string/analysis_tab_routine"
                    android:textColor="@color/analysis_tab_text"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/bg_analysis_tab" />

                <TextView
                    android:id="@+id/tabMeditation"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="@string/analysis_tab_meditation"
                    android:textColor="@color/analysis_tab_text"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/bg_analysis_tab" />

                <TextView
                    android:id="@+id/tabMood"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="@string/analysis_tab_mood"
                    android:textColor="@color/analysis_tab_text"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/bg_analysis_tab" />

                <TextView
                    android:id="@+id/tabAll"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/analysis_tab_all"
                    android:textColor="@color/analysis_tab_text"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/bg_analysis_tab" />

            </LinearLayout>

            <!-- Dynamic Content Area -->
            <FrameLayout
                android:id="@+id/contentArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="24dp" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="60dp"
                android:paddingBottom="60dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/emptyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/analysis_select_date"
                    android:textColor="@color/analysis_text_muted"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
