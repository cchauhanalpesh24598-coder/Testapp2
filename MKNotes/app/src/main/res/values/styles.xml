<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base App Theme -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorSurface</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
    </style>

    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="android:Theme.Material.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">#FF000000</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorDarkBackground</item>
        <item name="android:statusBarColor">#FF000000</item>
        <item name="android:navigationBarColor">@color/colorDarkSurface</item>
        <item name="android:textColorPrimary">@color/colorDarkTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorDarkTextSecondary</item>
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@color/colorToolbar</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Card Style -->
    <style name="NoteCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_note_card</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- FAB Style -->
    <style name="FabStyle">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/bg_fab</item>
        <item name="android:elevation">6dp</item>
        <item name="android:textColor">@color/colorFabIcon</item>
    </style>

    <!-- Dialog Style -->
    <style name="DialogStyle" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Editor Title Style -->
    <style name="EditorTitleStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Editor Content Style -->
    <style name="EditorContentStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <!-- Drawer Menu Item -->
    <style name="DrawerMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorDrawerItemText</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Settings Item -->
    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Settings Title -->
    <style name="SettingsTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!-- Settings Subtitle -->
    <style name="SettingsSubtitle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <!-- Section Header -->
    <style name="SectionHeader">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

</resources>
